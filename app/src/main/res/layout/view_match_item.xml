<?xml version="1.0" encoding="utf-8"?>
<com.example.testalldirectionscroll.adapter.GameItemView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="100dp"
    android:layout_height="wrap_content"
    android:background="@drawable/background_game"
    android:minWidth="100dp"
    android:padding="8dp">

    <TextView
        android:id="@+id/text_score_away"
        android:layout_width="48dp"
        android:layout_height="wrap_content"
        android:layout_row="0"
        android:layout_column="0"
        android:layout_gravity="center_vertical"
        android:textAppearance="?android:attr/textAppearanceLarge"
        tools:text="100" />

    <TextView
        android:id="@+id/text_score_home"
        android:layout_width="48dp"
        android:layout_height="wrap_content"
        android:layout_row="1"
        android:layout_column="0"
        android:layout_gravity="center_vertical"
        android:textAppearance="?android:attr/textAppearanceLarge"
        tools:text="200" />

    <TextView
        android:id="@+id/text_team_away"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_row="0"
        android:layout_column="1"
        android:layout_gravity="fill"
        android:gravity="center_vertical"
        android:textAppearance="?android:attr/textAppearanceMedium"
        tools:text="Away Team" />

    <TextView
        android:id="@+id/text_team_home"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_row="1"
        android:layout_column="1"
        android:layout_gravity="fill"
        android:gravity="center_vertical"
        android:textAppearance="?android:attr/textAppearanceMedium"
        tools:text="Away Team" />

    <ImageView
        android:id="@+id/logo_team_away"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_row="0"
        android:layout_column="2"
        android:src="@mipmap/ic_launcher" />

    <ImageView
        android:id="@+id/logo_team_home"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_row="1"
        android:layout_column="2"
        android:src="@mipmap/ic_launcher" />

</com.example.testalldirectionscroll.adapter.GameItemView>